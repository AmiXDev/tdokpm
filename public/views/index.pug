extends layout
block navbarTop
		nav.navbar-top-container.fixed-header.first-page
			button.toggle-button.btn-toggle-menu.btn-hamburger.js-slideout-toggle
				.toggle-view
					.toggles
						.toggle-icon
block content

	.wrapper.wrapper-position
		.card--picture
			img(src="./images/photos/round-pic.jpg", alt="google-ads", width="300", height="200")
		.inner-wrapper.card--text
			.inner-card--text
				h1.header تبلیغات در گوگل
				p.text-description 
					| ورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است			
	.wrapper.wrapper-video
		h2 معرفی اپلیکیشن
		video(controls)
			source(src="./video/intro.mp4")
			source(src="./video/intro.ogg")
	.wrapper.wrapper-off-banner
		h2 تخفیف ویژه اپلیکیشنی ها
		a(href="https://google.com")
			img(src="./images/photos/off-banner2.png", alt="off")
	#chart-container
		canvas#chart-preview(style="width: 100%;height:100%")
			div قیمت لحظه ای دلار حواله #{usdLive}
	.wrapper.table-service
		h2 شارژ تبلیغات در گوگل
		ul
			each item in h.googleAdsPlans
				li
					!= h.icon(item.icon)
					.item-group
						h3 #{item.title}
						h4 #{item.subTitle}
					.item-gorup
						a(href=`${item.linkBtn}`)
							span #{item.labelBtn}
						span #{item.off}
			a(href="#") مشاهده بیشتر
	.wrapper.wrapper-off-banner
		h2 ثبت نام کن
		a(href="https://google.com")
			img(src="./images/photos/off-banner2.png", alt="off")
	.wrapper.swiper-container
		h2 آخرین مقالات مسترگوگل
		.swiper-wrapper
			each blogPost in blogPosts
				if blogPost.draftMode === false
					.swiper-slide
						.gradient-shadow
						img(src=`${blogPost.thumbnailPhotoLocation}`, alt=`${blogPost.thumbnailImageAlt}`, width='500', height='auto')
						a(href=`/blog/${blogPost.slug}`) #{blogPost.title}
						.article-details
							img.single-author-gravatar(src=`${blogPost.authors.gravatar}`, alt=`${blogPost.authors.fullName}`)
							.single-author-name #{blogPost.authors.fullName}
							.createdDate.single-createdDate #{blogPost.createdAt}
